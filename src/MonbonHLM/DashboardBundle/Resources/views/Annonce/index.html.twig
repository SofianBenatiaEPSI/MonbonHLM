<body>

<div class="mainbar">

    <div class="container">

        <button type="button" class="btn mainbar-toggle" data-toggle="collapse" data-target=".mainbar-collapse">
            <i class="fa fa-bars"></i>
        </button>

        <div class="mainbar-collapse collapse">

            <ul class="nav navbar-nav mainbar-nav">

                <li class="">
                    <a href="{{path ('monbon_hlm_admin_annonces')}}">
                        <i class="fa fa-dashboard"></i>
                        Annonces
                    </a>
                </li>

                <li class="">
                    <a href="{{path ('monbon_hlm_admin_utilisateurs')}}">
                        <i class="fa fa-desktop"></i>
                        Utilisateurs
                        <span class="caret"></span>
                    </a>
                </li>

                <li class="">
                    <a href="{{path ('monbon_hlm_admin_ajouter_quartier')}}">
                        <i class="fa fa-desktop"></i>
                        Quartiers
                        <span class="caret"></span>
                    </a>
                </li>

            </ul>

        </div>

    </div>

</div>


<div class="container">

    <div class="content">

        <div class="content-container">

            <div class="row">

                <div class="col-md-12">

                    <div class="portlet">

                        <div class="portlet-header">

                            <h3>
                                <i class="fa fa-table"></i>
                                Annonces
                            </h3>

                        </div> <!-- /.portlet-header -->

                        <div class="portlet-content">

                            <div class="table-responsive">

                                <table
                                        class="table table-striped table-bordered table-hover table-highlight table-checkable"
                                        data-provide="datatable"
                                        data-length-change="true"
                                >
                                    <thead>
                                    <tr>
                                        <th>Quartier</th>
                                        <th>Type</th>
                                        <th>Bailleu</th>
                                        <th>Code postal</th>
                                        <th>Nom</th>
                                        <th>Prénom</th>
                                        <th>Téléphone</th>
                                        <th class="checkbox-column">Voir</th>
                                        <th class="checkbox-column">Modifier</th>
                                        <th class="checkbox-column">Supprimer</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for annonce in annonceTab %}
                                        <tr>
                                            <td>{{ annonce.quartier.nom }}</td>
                                            <td>{{ annonce.typelogement.type }}
                                            </td>
                                            <td>{{ annonce.referencebailleur.nom }}</td>
                                            <td>{{ annonce.codepostal.code }}</td>
                                            <td>{{ annonce.auteur.nom }}</td>
                                            <td>{{ annonce.auteur.prenom }}</td>
                                            <td>{{ annonce.auteur.telephone }}</td>
                                            <td class="checkbox-column"><a href="{{ path('monbon_hlm_home_details_annonces', {'id':annonce  .id}) }}"<i class="fa fa-eye"></a></td>
                                            <td class="checkbox-column"><a href="{{ path('monbon_hlm_home_modifier_annonce', {'id':annonce  .id}) }}"<i class="fa fa-edit"></a></td>
                                            <td class="checkbox-column"><a href="{{ path('monbon_hlm_home_supprimer_annonce', {'id':annonce.id}) }}" onclick="return(confirm('Etes-vous sûr de vouloir supprimer cette annonce?'));"<i class="fa fa-plus"></a></td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                {% include 'MonbonHLMDashboardBundle:Pagination:pagination.html.twig' %}
                            </div> <!-- /.table-responsive -->


                        </div> <!-- /.portlet-content -->

                    </div> <!-- /.portlet -->



                </div> <!-- /.col -->

            </div> <!-- /.row -->

        </div> <!-- /.content-container -->

    </div> <!-- /.content -->

</div> <!-- /.container -->

