<!DOCTYPE html>
<!--[if IE 8 ]><html class="ie ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--><html lang="en"> <!--<![endif]-->
<head>


    <!-- Basic Page Needs
    ================================================== -->
    <meta charset="utf-8" />
    <title>Accueil - MonbonHLM</title>
    {% include "::base.html.twig" %}
</head>

<body>
<!-- Wrapper -->
<div id="wrapper">
    {% include "::menu.html.twig" %}
    <div class="clearfix"></div>

    <!-- Titlebar
    ================================================== -->
    <div id="titlebar">
        <div class="container">
            <div class="row">
                <div class="col-md-12">

                    <h2>Quartier</h2>
                    <span>Annonce disponible dans ces quartiers</span>

                    <!-- Breadcrumbs -->
                    <nav id="breadcrumbs">
                        <ul>
                            <li><a href="#">Accueils</a></li>
                            <li>Quartiers</li>
                        </ul>
                    </nav>

                </div>
            </div>
        </div>
    </div>


    <!-- Content
    ================================================== -->
    <div class="container">
        <div class="row">

            {% for quartier in quartierTab %}
            <div class="col-md-4 col-sm-6">
                <!-- Service -->
                <div class="service">
                    <img src="{{ asset('uploads/quartiers/'~quartier.photo.id~'.'~quartier.photo.path) }}" alt="" />
                    <div class="service-overlay">
                        <i class="reneva icon-37"></i>
                        <h4>{{ quartier.nom }}</h4>
                        <div class="hidden-part">
                            <p>A fresh coat of paint can breathe life into any room.</p>
                            <a href="single-service-1.html">Read More</a>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}

        </div>


    </div>


    {% include "::footer.html.twig" %}

    <!-- Back To Top Button -->
    <div id="backtotop"><a href="#"></a></div>


    {% include "::scripts.html.twig" %}


</div>
<!-- Wrapper / End -->

</body>
</html>